<?xml version="1.0"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title>Yahoo News --Advanced Search</title>
  </head>
  <body>
    <h1>Yahoo News --Advanced Search</h1>
    <form method="get" action="http://dailynews.yahoo.com/search/news">
      <input name="adv" type="hidden" value="1">
        <input type="hidden" name="ei" value="UTF-8"/>
        
        <table>
          <tr>
            <td>
              <label for="p">Search for </label>
              <input id="p" name="p" size="30" value=""/>
            </td>
            <td>
            <input type="submit" value="Search"/></td>
            <td> <input type="reset"/></td>
          </tr>
          <tr>
            <td>
              <label for="t">Search Source</label>
              <select id="t" name="c">
                <option value="news">News Stories</option>
                <option value="news_photos">News Photos </option>
                <option value="av">Audio/Video </option>
                <option value="fullcov">Full Coverage </option>
                <option value="news_nytp">The New York Times </option>
              </select>
            </td>
            <td>
              <label for="o">Search Type</label>
              <select id="o" name="o">
                <option value="a">Matches on all words (AND) </option>
                <option value="o">Matches on any word (OR) </option>
                <option value="p">Exact Phrase Match </option>
                <option value="T">Title (Headline) Match </option>
                <option value="S">Summary Match </option>
              </select>
            </td>
            <td>
              <label for="s">Sort Results</label>
              <select id="s" name="s">
                <option value="">By Date and Relevance </option>
                <option value="-date">By Date </option>
                <option value="-$s,-date">By Relevance </option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Filters</td>
            <td>
              <input type="radio" name="2" value="" checked>  30 days
              </input>
              <input type="radio" name="2" value="1">  1 day </input>
              <input type="radio" name="2" value="3"> 3 days </input>
              <input type="radio" name="2" value="7"> 1 week </input>
              <input type="radio" name="2" value="14"> 2 weeks
              </input>
            </td>
<td>
              <input type="radio" name="2" value=""> Specify a date or date range </input>
              <label for="d">Date range mm/dd/yy</label>
              <input id="d"name="3" size="17" maxlength="17" type="text"> </input>
            </td>
          </tr>
          <tr>
            <td>Narrow Search To</td>
            <td>
              <input type="checkbox" name="1" value="ap"> AP
              </input>
              
              <input type="checkbox" name="1" value="reuters"> Reuters </input>
              
              <input type="checkbox" name="1" value="&quot;usa today&quot;"> USA TODAY
              </input>
              <input type="checkbox" name="1" value="&quot;business week&quot;"> Business Week
              </input>
              
              <input type="checkbox" name="1" value="&quot;e! online&quot;"> E! Online
              </input>
              
              
              
              
              
              <input type="checkbox" name="1" value="&quot;the new york times&quot;"> The New York Times (free)
              </input>
              
              
              
              
              <input type="checkbox" name="1" value="forbes.com"> Forbes
              </input>
              
              
              
              
              <input type="checkbox" name="1" value="afp"> AFP
              </input>
              
              
            </td>
          </tr>
          <tr>
            <td>Press Releases</td>
            <td>
              <input type="checkbox" name="1" value="internetwire"> Internet Wire
              </input>
              
              <input type="checkbox" name="1" value="&quot;business wire&quot;"> Business Wire
              </input>
              
              
              
              
              
              <input type="checkbox" name="1" value="primezone"> PrimeZone
              </input>
              
              <input type="checkbox" name="1" value="&quot;canada newswire&quot;"> Canada NewsWire
              </input>
              
              <input type="checkbox" name="1" value="&quot;pr newswire&quot;"> PR Newswire
              </input>
              
              
              
              
              
              <input type="checkbox" name="1" value="smartmoney.com"> SmartMoney.com
              </input>
              
              <input type="checkbox" name="1" value="&quot;u.s. newswire&quot;"> U.S. Newswire
              </input>
              
            </td>
          </tr>
          <tr>
            <td>Categories</td> 
            <td>
              <input type="checkbox" name="cat" value="top"> Top Stories
              </input>
              
              <input type="checkbox" name="cat" value="world"> World
              </input>
              <input type="checkbox" name="cat" value="politics"> Politics
              </input>
              <input type="checkbox" name="cat" value="entertainment"> Entertainment
              </input>
              <input type="checkbox" name="cat" value="business"> Business
              </input>
              <input type="checkbox" name="cat" value="crimes"> Crimes and trials
              </input>
              
              
              
              
              <input type="checkbox" name="cat" value="health"> Health
              </input>
              <input type="checkbox" name="cat" value="local"> Local
              </input>
              <input type="checkbox" name="cat" value="oddly"> Oddly Enough
              </input>
              <input type="checkbox" name="cat" value="community"> Community
              </input>
              <input type="checkbox" name="cat" value="commentary"> Commentary
              </input>
              
              
              
              
              <input type="checkbox" name="cat" value="science"> Science
              </input>
              <input type="checkbox" name="cat" value="sports"> Sports
              </input>
              <input type="checkbox" name="cat" value="technology"> Technology
              </input>
              <input type="checkbox" name="cat" value="elections"> Elections
              </input>
              <input type="checkbox" name="cat" value="finance"> Finance
              </input>
            </td>
            
            <td>
              <select name="n">
                <option> 10
                </option>
                <option selected> 20
                </option>
                <option> 50
                </option>
                <option> 100
                </option>
            </select> matches per page</td>
          </tr>
          
        </table>
        <p>
          <input type="submit" value="Search">
          </p>
          
        </form>
      </body>
    </html>

