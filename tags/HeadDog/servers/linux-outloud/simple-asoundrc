pcm.recorder  {
    type dsnoop
    ipc_key 2048
    slave {
        pcm "hw:0,0"
        format s16_LE
        period_time 0
        period_size 1024
        buffer_size 4096
        rate 44100
    }
}


pcm.!default {
        type asym
        playback.pcm "plug:dmix"
        capture.pcm "plug:dsnoop"
}

